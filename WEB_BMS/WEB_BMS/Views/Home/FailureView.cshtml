@{
    ViewBag.Title = "Thanh Toán Thất Bại";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <i class="fas fa-times-circle text-danger" style="font-size: 64px;"></i>
            <h2 class="mt-4">Thanh Toán Thất Bại</h2>
            
            @if (TempData["ErrorMessage"] != null) {
                <div class="alert alert-danger mt-3">
                    @TempData["ErrorMessage"]
                </div>
            }

            <div class="mt-4">
                <a href="@Url.Action("XemGioHang", "Home")" class="btn btn-primary">Quay Lại Giỏ Hàng</a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Về Trang Chủ</a>
            </div>
        </div>
    </div>
</div>

