@using WEB_BMS.Models
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/bootstrap/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Global styles */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            height: 100vh;
            width: 100%; /* Ensure full width */
        }

        /* Employee info section */
        .employee-info {
            background-color: #f8f9fa;
            padding-top: 10px;
            padding-bottom: 10px;
            display: flex;
            justify-content: flex-end; /* Align items to the right */
            align-items: center;
            border-bottom: 1px solid #ccc;
            width: 100%; /* Ensure full width */
        }

            .employee-info span {
                color: #333;
                margin-right: 15px; /* Space between name and logout button */
            }

        /* Header styles */
        header {
            background-color: #333;
            padding-top: 10px;
            padding-bottom: 10px;
            color: #fff;
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%; /* Ensure full width */
        }

            header h1 {
                margin: 0;
            }

            header ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
                display: flex;
            }

            header li {
                margin-right: 20px;
            }

            header a {
                color: #fff;
                text-decoration: none;
            }

                header a:hover {
                    text-decoration: underline;
                }

        /* Dashboard styles */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap; /* Allow wrapping of boxes */
            margin-top: 20px; /* Space above boxes */
            flex-grow: 1; /* Allow the container to take available space */
        }

        .box {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 150px;
            height: 150px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 10px;
            transition: transform 0.3s, box-shadow 0.3s;
            text-decoration: none; /* Remove underline */
            color: #333; /* Change text color */
        }

            .box:hover {
                transform: scale(1.1);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        /* Individual box colors */
        #box1 {
            background-color: #ffcc00;
        }

        #box2 {
            background-color: #66ccff;
        }

        #box3 {
            background-color: #DE3163;
        }

        .footer {
            text-align: center;
            
            background-color: #f8f9fa;
            width: 100%; /* Ensure full width */
        }
    </style>    
</head>
<body>


    <header>
        <h1>VLXD 24H</h1>
        <ul>
            <li><a href="@Url.Action("TrangChu", "NhanVien")">Trang chủ</a></li>
            <li><a href="@Url.Action("HienThiDSSP", "NhanVien")">Quản lý sản phẩm</a></li>
            <li><a href="@Url.Action("HienThiDSLoai", "NhanVien")">Quản lý loại</a></li>
            <li><a href="@Url.Action("HienThiDSNCC", "NhanVien")">Quản lý nhà cung cấp</a></li>
            <li><a href="@Url.Action("HTDSKhachHang", "NhanVien")">Quản lý khách hàng</a></li>
            <li><a href="@Url.Action("HienThiDSDonBanHang", "NhanVien")">Quản lý đơn bán hàng hàng</a></li>
            <li><a href="@Url.Action("HienThiQuanLyDonNhanHang", "NhanVien")">Quản lý đơn nhập hàng hàng</a></li>
            <li><a href="@Url.Action("BaoCaoThongKe", "NhanVien")">Báo cáo - Thống kê</a></li>
        </ul>
    </header>
    <!-- Employee Info Section -->
    <div class="employee-info">
        @if (Session["nhanvien"] != null)
        {
            var nv = Session["nhanvien"] as NhanVien;
            <span>Xin chào, @nv.TenNV</span>
            <a style="padding-right:10px" class="btn btn-danger" href="@Url.Action("Index", "Home")">Đăng xuất</a>
        }
    </div>
    <div class="container">
        @RenderBody()
    </div>

    <div class="footer">
        <p>&copy; 2024 Công Ty Cổ Phần Ngọc Hà Vật Liệu Xây Dựng. All rights reserved.</p>
    </div>

    <script src="~/scripts/jquery.js"></script>
    <script src="~/scripts/bootstrap.js"></script>
</body>
</html>
