@model WEB_BMS.Models.KhachHang

@{
    ViewBag.Title = "Xóa khách hàng";
    Layout = "~/Views/Shared/Layout_NhanVien.cshtml";
}

<link href="~/Content/admin-styles.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="page-header">
    <div class="container">
        <h2 class="text-center mb-0">Xóa Khách Hàng</h2>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                        <h3 class="mt-3">Bạn có chắc chắn muốn xóa khách hàng này?</h3>
                        <p class="text-muted">Hành động này không thể hoàn tác</p>
                    </div>

                    <div class="customer-info">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="fas fa-user me-2 text-primary"></i>
                                    <span class="fw-bold">Họ tên:</span>
                                    <span>@Model.HoTen</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="fas fa-calendar me-2 text-primary"></i>
                                    <span class="fw-bold">Ngày sinh:</span>
                                    <span>@Model.NgaySinh.ToString("dd/MM/yyyy")</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="fas fa-venus-mars me-2 text-primary"></i>
                                    <span class="fw-bold">Giới tính:</span>
                                    <span>@Model.GioiTinh</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <i class="fas fa-phone me-2 text-primary"></i>
                                    <span class="fw-bold">Điện thoại:</span>
                                    <span>@Model.DienThoai</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="info-item">
                                    <i class="fas fa-envelope me-2 text-primary"></i>
                                    <span class="fw-bold">Email:</span>
                                    <span>@Model.Email</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="info-item">
                                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                    <span class="fw-bold">Địa chỉ:</span>
                                    <span>@Model.DiaChi</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-danger btn-lg me-2">
                                <i class="fas fa-trash me-2"></i>Xác nhận xóa
                            </button>
                            <a href="@Url.Action("HienThiKh")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
