@model WEB_BMS.Models.DonBanHang

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/Layout_NhanVien.cshtml";
}

<!-- ... phần code trước giữ nguyên ... -->

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ChiTietDonHang)
            {
                <tr>
                    <td>@item.TenHangHoa</td>
                    <td>@String.Format("{0:N0} VNĐ", item.DonGia)</td>
                    <td>@item.SoLuong</td>
                    <td>@String.Format("{0:N0} VNĐ", item.ThanhTien)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Tổng tiền:</strong></td>
                <td><strong>@String.Format("{0:N0} VNĐ", ViewBag.TongTien)</strong></td>
            </tr>
        </tfoot>
    </table>
</div>