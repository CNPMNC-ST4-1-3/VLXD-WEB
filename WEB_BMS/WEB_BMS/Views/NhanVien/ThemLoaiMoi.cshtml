@model WEB_BMS.Models.Loai

@{
    ViewBag.Title = "Thêm loại sản phẩm mới";
    Layout = "~/Views/Shared/Layout_NhanVien.cshtml";
}

<link href="~/Content/admin-styles.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="page-header">
    <div class="container">
        <h2 class="text-center mb-0">Thêm Loại Sản Phẩm Mới</h2>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body p-4">
                    @using (Html.BeginForm("ThemLoaiMoi", "NhanVien", FormMethod.Post))
                    {
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-hashtag me-2"></i>Mã loại
                                    </label>
                                    @Html.EditorFor(m => m.MaLoai, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mã loại" } })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-tag me-2"></i>Tên loại
                                    </label>
                                    @Html.EditorFor(m => m.TenLoai, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên loại" } })
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-info-circle me-2"></i>Thông tin
                                    </label>
                                    @Html.TextAreaFor(m => m.ThongTin, new { @class = "form-control", rows = "4", placeholder = "Nhập thông tin chi tiết" })
                                </div>
                            </div>

                            <div class="col-12 text-center mt-4">
                                <button type="submit" class="btn btn-success me-2">
                                    <i class="fas fa-plus-circle me-2"></i>Thêm mới
                                </button>
                                <a href="@Url.Action("HienThiDSLoai")" class="btn btn-secondary">
                                    <i class="fas fa-times me-2"></i>Hủy
                                </a>
                            </div>
                        </div>
                    }
                    @if (ViewBag.ThongBao != null)
                    {
                        <div class="alert alert-info mt-4">
                            <i class="fas fa-info-circle me-2"></i>@Html.Raw(ViewBag.ThongBao)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>