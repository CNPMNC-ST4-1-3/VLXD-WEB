@{
    ViewBag.Title = "Xóa nhà cung cấp";
    Layout = "~/Views/Shared/Layout_NhanVien.cshtml";
}

<link href="~/Content/admin-styles.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="page-header">
    <div class="container">
        <h2 class="text-center mb-0">Xóa Nhà Cung Cấp</h2>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body p-4 text-center">
                    @if (ViewBag.tb != null)
                    {
                        <div class="mb-4">
                            <i class="fas fa-info-circle text-info" style="font-size: 4rem;"></i>
                        </div>
                        <div class="alert alert-info">
                            <p class="mb-0">@ViewBag.tb</p>
                        </div>
                    }
                    
                    <a href="@Url.Action("HienThiDSNCC")" class="btn btn-primary btn-lg mt-3">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>