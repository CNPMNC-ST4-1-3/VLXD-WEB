    }

    .text-secondary {
        margin-top: 20px;
    }

    .content {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .submenu {
        display: none;
    }

    .container-search {
        width: 80%;
    }

    .form {
        position: relative;
    }

        .form .fa-search {
            position: absolute;
            top: 20px;
            left: 20px;
            color: #9ca3af;
        }

        .form span {
            position: absolute;
            right: 17px;
            top: 13px;
            padding: 2px;
            border-left: 1px solid #d1d5db;
        }

    .left-pan {
        padding-left: 7px;
    }

        .left-pan i {
            padding-left: 10px;
        }

    .form-input {
        height: 55px;
        text-indent: 33px;
        border-radius: 10px;
    }

        .form-input:focus {
            box-shadow: none;
            border: none;
        }
    .card:hover {
        transform: translateY(-5px);
        transition: transform 0.2s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>
<div class="sidebar">
    <div class="text-primary"><a href="~/NhanVien/HienThiDonDatHang">Quản lý nhập hàng</a></div>
    <div id="toggle-submenu" class="text-primary" style="cursor: pointer;">Nhập hàng</div>
    <ul class="list-group submenu" id="submenu" style="margin-top: 20px">
        @foreach (var item in Model)
        {
            <div class="nav-item">
                <a class="list-group-item list-group-item-action" href="@Url.Action("HangHoaTheoNCC", "NhanVien", new { mancc = item.MaNCC })">
                    @Html.DisplayFor(modelItem => item.TenNCC)
                </a>
            </div>
        }

    </ul>
    <hr style="margin-top" style="margin-top:30px" />
    <div class="text-primary" style="margin-top:10px">Khác</div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<script>
    document.getElementById('toggle-submenu').addEventListener('click', function () {
