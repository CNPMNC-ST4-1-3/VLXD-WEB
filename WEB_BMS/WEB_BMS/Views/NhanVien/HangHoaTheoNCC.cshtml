
@{
    ViewBag.Title = "HangHoaTheoNCC";
    Layout = "~/Views/Shared/Layout_NhanVien.cshtml";
}


@model IEnumerable<WEB_BMS.Models.HangHoa>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        overflow-x: hidden;
        color: black;
    }

    a {
        text-decoration: none;
        color: black;
    }

    .sidebar {
        color: black;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 100;
        background-color: #f8f9fa;
        padding: 20px;
        margin-top: 100px;
    }

    .nav-link {
        color: black;
    }

    .text-primary {
        color: black !important;
        margin-top: 30px;
    }

    .text-secondary {
        margin-top: 20px;
    }

    .content {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .submenu {
        display: none;
    }

    .container-search {
        width: 80%;
    }

    .form {
        position: relative;
    }

    .form .fa-search {
    position: absolute;
    top: 20px;
    left: 20px;
    color: #9ca3af;
}

    .form span {
        position: absolute;
        right: 17px;
        top: 13px;
        padding: 2px;
        border-left: 1px solid #d1d5db;
    }

    .left-pan {
        padding-left: 7px;
    }

        .left-pan i {
            padding-left: 10px;
        }

    .form-input {
        height: 55px;
        text-indent: 33px;
        border-radius: 10px;
    }

        .form-input:focus {
            box-shadow: none;
            border: none;
        }
    .card:hover {
        transform: translateY(-5px);
        transition: transform 0.2s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>
<div class="sidebar">
    <div class="text-primary"><a href="~/NhanVien/HienThiDonDatHang">Quản lý nhập hàng</a></div>
    <div id="toggle-submenu" class="text-primary" style="cursor: pointer;"><a href="~/NhanVien/HienThiQuanLyDonNhanHang">Nhập hàng</a></div>
    <ul class="nav flex-column submenu" id="submenu">
        @foreach (var item in Model)
        {
            <li class="nav-item">
                <a class="nav-link" href="~/NhanVien/HangHoaTheoNCC/@item.MaNCC">@Html.DisplayFor(modelItem => item)</a>
            </li>
        }

    </ul>
    <hr style="margin-top" style="margin-top:30px" />
    <div class="text-primary" style="margin-top:10px">Khác</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container-search">

    <div class="row height d-flex justify-content-center align-items-center">

        <div class="col-md-6">

            <div class="form">
                <i class="fa fa-search"></i>
                <input type="text" class="form-control form-input" placeholder="Search anything...">
            </div>

        </div>

    </div>
</div>
</div>
<div class="content" style="margin-left: 250px; padding: 20px;">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem; margin: 15px;">
            <img src="~/assets/img/img_product/@item.HinhAnh" class="card-img-top" alt="@item.TenHangHoa" style="height: 200px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.TenHangHoa)</h5>
                <p class="card-text text-center">
                    <strong>@Html.DisplayFor(modelItem => item.GiaBan) VNĐ</strong>
                </p>
                <div class="d-flex justify-content-center" style="justify-items:center;">
                    <button class="btn btn-primary" onclick="addToCart('@item.MaHH')">Nhập</button>
                </div>
            </div>  
        </div>
    }


</div>
