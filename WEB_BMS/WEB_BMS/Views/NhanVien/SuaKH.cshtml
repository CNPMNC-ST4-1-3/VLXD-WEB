@model WEB_BMS.Models.KhachHang

@{
    ViewBag.Title = "Chỉnh sửa thông tin khách hàng";
    Layout = "~/Views/Shared/Layout_NhanVien.cshtml";
}

<link href="~/Content/admin-styles.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="page-header">
    <div class="container">
        <h2 class="text-center mb-0">Chỉnh Sửa Thông Tin Khách Hàng</h2>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MaKH)

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-user me-2"></i>Họ và Tên
                                    </label>
                                    @Html.EditorFor(m => m.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-calendar me-2"></i>Ngày sinh
                                    </label>
                                    @Html.TextBoxFor(m => m.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-venus-mars me-2"></i>Giới tính
                                    </label>
                                    @Html.EditorFor(m => m.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-phone me-2"></i>Số điện thoại
                                    </label>
                                    @Html.EditorFor(m => m.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-user-circle me-2"></i>Tài khoản
                                    </label>
                                    @Html.EditorFor(m => m.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-key me-2"></i>Mật khẩu
                                    </label>
                                    @Html.EditorFor(m => m.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </label>
                                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-map-marker-alt me-2"></i>Địa chỉ
                                    </label>
                                    @Html.EditorFor(m => m.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="col-12 text-center mt-4">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-save me-2"></i>Lưu thay đổi
                                </button>
                                <a href="@Url.Action("HienThiKh")" class="btn btn-secondary">
                                    <i class="fas fa-times me-2"></i>Hủy
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
