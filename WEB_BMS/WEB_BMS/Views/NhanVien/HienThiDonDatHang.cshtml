                            <td>@Html.DisplayFor(i => item.MaNV)</td>
                            <td>0d</td>
                            <td>
                                <a href="~/NhanVien/ChiTietDonNH/@item.MaDonNhapHang">
                                    <button type="button" class="btn btn-outline-dark">Xem</button>
                                </a>
                                <a href="~/NhanVien/NhapHang/@item.MaDonNhapHang">
                                    <button type="button" class="btn btn-primary">Nhập hàng</button>
                                </a>
                                <button type="button" class="btn btn-danger" onclick="confirmDelete('@item.MaDonNhapHang')">Xóa</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

