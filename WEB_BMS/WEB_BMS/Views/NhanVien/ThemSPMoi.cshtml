@model WEB_BMS.Models.HangHoa

@{
    ViewBag.Title = "Thêm sản phẩm mới";
    Layout = "~/Views/Shared/Layout_NhanVien.cshtml";
}

<link href="~/Content/admin-styles.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="page-header">
    <div class="container">
        <h2 class="text-center mb-0">Thêm Sản Phẩm Mới</h2>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body p-4">
                    @using (Html.BeginForm("ThemSPMoi", "NhanVien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-barcode me-2"></i>Mã sản phẩm
                                    </label>
                                    @Html.EditorFor(m => m.MaHH, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mã sản phẩm" } })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-box me-2"></i>Tên sản phẩm
                                    </label>
                                    @Html.EditorFor(m => m.TenHangHoa, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên sản phẩm" } })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-tags me-2"></i>Loại sản phẩm
                                    </label>
                                    @Html.DropDownList("MaLoai", null, "Chọn loại sản phẩm", new { @class = "form-select" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-building me-2"></i>Nhà cung cấp
                                    </label>
                                    @Html.DropDownList("MaNCC", null, "Chọn nhà cung cấp", new { @class = "form-select" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-cube me-2"></i>Đơn vị
                                    </label>
                                    @Html.EditorFor(m => m.DonVi, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập đơn vị tính" } })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-warehouse me-2"></i>Số lượng
                                    </label>
                                    @Html.EditorFor(m => m.SoLuongTon, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-image me-2"></i>Hình ảnh
                                    </label>
                                    <input type="file" name="fileupload" class="form-control" accept="image/*" />
                                    @if (ViewBag.Thongbao != null)
                                    {
                                        <div class="alert alert-info mt-2">
                                            <i class="fas fa-info-circle me-2"></i>@ViewBag.Thongbao
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-tag me-2"></i>Giá bán
                                    </label>
                                    @Html.EditorFor(m => m.GiaBan, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", step = "1000" } })
                                </div>
                            </div>

                            <div class="col-12 text-center mt-4">
                                <button type="submit" class="btn btn-success me-2">
                                    <i class="fas fa-plus-circle me-2"></i>Thêm mới
                                </button>
                                <a href="@Url.Action("HienThiDSSP")" class="btn btn-secondary">
                                    <i class="fas fa-times me-2"></i>Hủy
                                </a>
                            </div>
                        </div>
                    }
                    @if (ViewBag.ThongBao1 != null)
                    {
                        <div class="alert alert-success mt-4">
                            <i class="fas fa-check-circle me-2"></i>@Html.Raw(ViewBag.ThongBao1)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

